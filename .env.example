MOLE_PORT=9001
MOLE_DOMAIN=mole.yourdomain.com
MOLE_EMAIL=admin@yourdomain.com
MOLE_USE_HTTPS=true

# Certificate configuration
MOLE_USE_WILDCARD=false
MOLE_SUBDOMAINS=web,api,app

# DNS provider for wildcard certificates (required if MOLE_USE_WILDCARD=true)
# Supported providers: cloudflare, route53, digitalocean, etc.
MOLE_DNS_PROVIDER=cloudflare
MOLE_DNS_API_KEY=your_cloudflare_api_key_here
MOLE_DNS_EMAIL=your_cloudflare_email_here

# Alternative for other providers
# MOLE_DNS_PROVIDER=route53
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# MOLE_DNS_PROVIDER=digitalocean
# DO_AUTH_TOKEN=your_digitalocean_token